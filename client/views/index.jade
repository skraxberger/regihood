doctype html
html
    head
        meta(charset='utf8')
        base(href='/')
        title Regihood
        link(href='css/app.css', rel='stylesheet')
        link(href="components/bootstrap/dist/css/bootstrap.css", rel="stylesheet")
        link(href="components/font-awesome/css/font-awesome.min.css", rel="stylesheet")
        link(href="components/bootstrap-social/bootstrap-social.css", rel="stylesheet")
        link(href="components/ngImgCrop/compile/minified/ng-img-crop.css" rel="stylesheet")
    body(style="background-color: #E5E5E5;")
        //
            pre#uiRouterInfo
                | $state = {{$state.current.name}}
                | $stateParams = {{$stateParams}}
                | $state full url = {{ $state.$current.url.source }}

        if (!user)
            include includes/navbar_logged_out
            include includes/logged_out
        else
            div(data-ng-app="regihoodApp")
                include includes/navbar_logged_in
                include includes/logged_in

        script(src='components/jquery/dist/jquery.min.js')
        script(src='components/angular/angular.min.js')
        script(src='components/angular-ui-router/release/angular-ui-router.min.js')
        script(src='components/ui-utils/ui-utils.min.js')
        script(src='components/ng-file-upload/angular-file-upload.min.js')
        script(src='components/ngImgCrop/compile/minified/ng-img-crop.js')
        script(src='components/angular-bootstrap/ui-bootstrap-tpls.min.js')
        script(src='components/ngInfiniteScroll/build/ng-infinite-scroll.min.js')
        script(src='js/app.js')
        script(src='js/controllers.js')
        script(src='js/directives.js')
    block extraJS

        script(type="text/ng-template", id="imageCropDialog")
            include partials/image-crop